<div class="container">
  <div class="row">
    <div class="col-sm-12">
      
    <p><strong>
      <%= comment.user.name %>
      </strong> ::
      <%= comment.description %></p>
    </div>
      <div class="col-sm-2" style="width: 20px;float: left;">
        
      <% if current_user == comment.user %>
      <%= link_to [comment.article, comment], data: {turbo_method: :delete,turbo_confirm: "Are you sure?" }, :class=> "you_class" do %>
        <i class="fa fa-trash" aria-hidden="true" target="_blank"></i>
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-2">
      
    <a href="#" class="comment-form-display"> <i class="fa fa-reply" aria-hidden="true"></i></a>
    <div class="comment-form" style="display: none;">
      <%= render partial: "comments/form", locals: {article: comment.article, parent: comment} %>
    </div>
    <div class="sub-comment" style="padding-left: 20px;" >
      <%= render comment.comments %>
    </div>
    </div>
    
    <script >
      document.querySelectorAll('.comment-form-display').forEach((el) => {el.addEventListener('click', (ev) => {
        ev.preventDefault();
        el.nextElementSibling.style = 'display: block;'
      })
      })
    </script>
  </div>
</div>