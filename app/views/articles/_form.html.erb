<%=form_with(model: article) do |form|  %>
<% if article.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
  <ul>
    <% article.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul> 
</div>
<% end %>
<div class="row mb-3 form-group text-center pt-3">
  <%= form.label :title, "Title : ", style: "padding-left: 80px" , class: "col-sm-4 col-form-label fs-5 text-white" %>
  <div class="col-sm-6">
    <%= form.text_field :title ,placeholder: "Enter Article Title*", class: 'form-control w-blank h-30' %>
  </div>
</div>
<div class="row mb-3 form-group text-center">
  <%= form.label :description, "Description : ", style: "padding-left: 80px" , class: "col-sm-4 col-form-label fs-5  text-white" %>
  <div class="col-sm-6">
    <%= form.text_field :description ,placeholder: "Enter About Article*", class: 'form-control w-blank h-30'%>
  </div>
</div>
<div class="row mb-3 form-group text-center">
  <%= form.label :image , "Image : ", style: "padding-left: 80px" , class: "col-sm-4 col-form-label fs-5 text-white" %>
  <div class="col-sm-6">
    <%= form.file_field :image , class: 'form-control h-30' , style: "width: 340px"%>
  </div>
</div>
<div>
  <%= form.submit  class: "btn btn-primary rounded-pill w-auto h-auto fst-italic ", style:"margin-left:100px" %>
</div>
<% end %>