<div class="container">
  <div class="row" id="<%= dom_id article %>">
    <div class="col-sm-12">
      <table class="table table-hover">
        <tbody>
          <tr>
            <td class="col-sm-3"><%= article.title %></td>
            <td class="col-sm-3"><%= article.description %></td>
            <td><%= image_tag article.image_url if article.image %></td>
            <td class="col-sm-3"><%= link_to 'View', article_path(article),class: "btn btn-primary rounded-pill w-auto h-auto fst-italic ",  style:"margin-left:20px"%> 
              <% if current_user == article.user %>
              /<%= link_to 'Edit', edit_article_path(article),class: "btn btn-primary rounded-pill w-auto h-auto fst-italic " %>
              <%= button_to "Destroy ", article, method: :delete ,class: "btn btn-primary rounded-pill w-auto h-auto fst-italic mt-3 ms-3"%>
              <% end %>
            </td>
          </tr> 
          
        </tbody>
      </table>
    </div>
  </div>
</div>