<div class="container mt-5">
  <div class="card bg-info w-50 mx-auto rounded-4 ">
    <h2 class="mx-auto fst-italic mt-3">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="form-group">
      <%= f.label :email,"Email Address : ", class: 'form-label pt-1 ms-5 fst-italic'%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Your Email Id*", class: 'form-control w-75 h-25 mx-auto' %>
    </div>
    <div class="form-group">
      <%= f.label :password,"Password : " , class: 'form-label pt-1 ms-5 fst-italic'%>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Enter Your Password*", class: 'form-control w-75 h-25 mx-auto' %>
    </div>
    <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me , class: 'ms-5'%>
      <%= f.label :remember_me , class: 'fst-italic'%>
    </div>
    <% end %>
    <div class="form-group mt-1">
      <%= f.submit "Log in", class: "btn btn-primary rounded-pill w-auto ms-5 fst-italic" %>
    </div>
    <% end %>
    <div class="auth-links ms-5 mb-3">
      <%= render "devise/shared/links"%>
    </div>
  </div>
</div>