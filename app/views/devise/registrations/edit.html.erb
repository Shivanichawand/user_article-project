<div class="container mt-5">
  <div class="card bg-info w-75 mx-auto rounded-4">
    <h2 class="mx-auto fst-italic">Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email ,"Email Address : ", class: ' form-label fst-italic', style:"padding-left:90px" %>
      <%= f.email_field :email, autofocus: true, placeholder: "Enter Your Email Id*",autocomplete: "email", class: 'form-control w-75 h-25 mx-auto '%>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %> 
    <div class="form-group">
      <%= f.label :password ,"Password : " , class: 'form-label pt-1  fst-italic', style:"padding-left:90px"%> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Your Password*", class: 'form-control w-75 h-25 mx-auto'  %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation :", class: 'form-label pt-1  fst-italic' , style:"padding-left:90px"%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Retype Your Password*", class: 'form-control w-75 h-25 mx-auto'  %>
    </div>
    <div class="form-group">
      <%= f.label :current_password ,"Current Password", class: 'form-label pt-1  fst-italic' , style:"padding-left:90px"%> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Enter Current Password*", class: 'form-control w-75 h-25 mx-auto'  %>
    </div>
    <div class="form-group mt-1">
      <%= f.submit "Update" , class: "btn btn-primary rounded-pill w-auto fst-italic", style:"margin-left:90px"%>
    </div>
    <% end %>
    <h3 style="padding-left:90px;">Cancel my account / Unhappy? </h3>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary rounded-pill w-auto fst-italic" , style:"margin-left:90px"%>
    <%= link_to "Back", :back , class: "btn btn-primary rounded-pill w-25 fst-italic", style:"margin-left:90px; margin-top:10px; margin-bottom:10px;" %>
  </div>
</div>